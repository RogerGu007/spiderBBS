<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.school.dao.INewsDAO">
    <sql id="ColumnList">
      subject,
      newsType,
      newsSubType,
      postDate,
      locationCode,
      isHot,
      createAt,
      createBy,
      linkUrl
    </sql>

    <sql id="FullColumn">
        id,
        <include refid="ColumnList"/>
    </sql>

    <!--<select id="selectAllNews" resultType="com.school.entity.News">-->
        <!--select <include refid="FullColumn"/> from news-->
    <!--</select>-->

    <insert id="insert" parameterType="com.school.entity.NewsDTO" useGeneratedKeys="true" keyProperty="id">
        insert into News (<include refid="ColumnList"/>) VALUES
        (#{subject}, #{newsType}, #{newsSubType}, #{postDate}, #{locationCode}, #{isHot}, now(), #{createBy}, #{linkUrl})
    </insert>

    <select id="findByUrl" parameterType="map" resultType="com.school.entity.NewsDTO">
        select <include refid="FullColumn"/> from News
        where linkUrl = #{linkUrl}
    </select>
</mapper>