<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.school.dao.INewsDAO">
    <sql id="ColumnList">
      subject,
      newsType,
      newsSubEnum,
      isHot,
      postDate,
      locationCode,
      linkUrl,
      createAt,
      createBy
    </sql>

    <sql id="FullColumn">
        id,
        <include refid="ColumnList"/>
    </sql>

    <select id="selectAllNews" resultType="com.school.entity.NewsDTO">
        select <include refid="FullColumn"/> from news
    </select>

    <insert id="insert" parameterType="com.school.entity.NewsDTO" useGeneratedKeys="true" keyProperty="id">
        insert into news <include refid="ColumnList"/> VALUES
        (#{subject}, #{newsType}, #{newsSubEnum}, #{isHot}, #{postDate}, #{locationCode}, #{linkUrl}, now(), #{createBy})
    </insert>

    <select id="findByUrl" parameterMap="map" resultMap="com.school.entity.NewsDTO">
        select <include refid="ColumnList"/> from news
        where linkUrl = ${linkUrl}
    </select>
</mapper>