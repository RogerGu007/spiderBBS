<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.school.dao.IUserDAO">
    <sql id="ColumnList">
      phonenumber,
      nickname,
      avatarUrl,
      isVerified,
      createAt,
      createBy,
      updateAt,
      updateBy
    </sql>

    <sql id="FullColumn">
        id,
        <include refid="ColumnList"/>
    </sql>


    <insert id="insert" parameterType="com.school.entity.UserDTO" useGeneratedKeys="true" keyProperty="id">
        insert into User (<include refid="ColumnList"/>) VALUES
        (#{phonenumber}, #{nickname}, #{avatarUrl}, #{isVerified}, now(), #{createBy}, now(), #{updateBy})
    </insert>

    <select id="findByNickname" parameterType="String" resultType="com.school.entity.UserDTO">
        select <include refid="FullColumn"/> from User
        where nickname = #{nickname}
    </select>
</mapper>